<div class="row song-queue-head p-1">
    <div class="col-1 p-0">
        <a href="<%= song_path(song)%>">
            <%= image_tag song.thumbnail , class: "thumbnail" %>
        </a>
    </div>
    <div class="col-9 p-1">
        <h6><%= song.name %></h6>
        <p> <%= song.users.first.name %></p>
    </div> 
    <div class="col-2">
        <div class='row p-1 pt-4 justify-content-center d-flexlike_button align-content-center'>
            <div class="col-6 like_button">
                <%= render "likes/like_button" , likeable:song %>
            </div>
            <div class="col-6">
                <%= link_to image_tag("icons/x-circle.svg"), playlist_playlist_song_url(id: song.id) , method: :delete%>
            </div>
        </div>  
    </div>
</div>