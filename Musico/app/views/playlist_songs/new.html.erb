<div class="row p-5 justify-content-center">
    <div class="col-12 text-center">
        <h5>add Song</h5>
    </div>
    <div class="col-8">
        <%= form_with url: playlist_playlist_songs_path, method: :post do |form| %>
 
        <div class="field">
            <%= form.label :serach_user , class: "form-label" %>
            <%= form.text_field :search_query, id: 'playlist_song_search_query'  , class: "form-control"%>
          </div>

          <div id="songs" class="ml-1 mr-1">
          </div>

          <h5 class="mt-3">selected songs</h5>
          <div id="selected_songs" class="ml-1 mr-1">
          </div>


          <div class="actions">
            <%= form.submit "add", class: "btn"%>
          </div>
        <% end %>
    </div>
</div>



<script>

    $(document).ready(function() {
        $('#playlist_song_search_query').on('change', function() {
            var query = $(this).val();
            $.ajax({
                url: '/search_song/' + query + '.js',
                type: 'GET'
            });

        });
    });

</script>