<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Language</th>
      <th>category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.language_id %></td>
        <td><%= song.category_id %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'like', likes_path(song_id: song.id) %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td class='like_button'><%= render "likes/like_button" , likeable:song %><td>
        <td><%= link_to 'add to queue', song_queue_path(song.id), method: :patch%></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

