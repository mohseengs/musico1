<h3 class="mb-4">Login</h3>
<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-danger" %>
<% end %>

<%= form_with  url: login_path, method: :post do |form| %>
    
    <div class="field">
        <%= form.label :email ,class: "form-lable"%>
        <%= form.text_field :email , class: "form-control"%>
    </div>

    <div class="field">
        <%= form.label :password ,class: "form-lable"%>
        <%= form.text_field :password , class: "form-control" %>
    </div>

    <div class="actions">
        <%= form.submit "login", class: "btn auth-btn" %>
    </div>

    <div class="row justify-content-center mt-2" >
         <%= link_to "create account", signup_path, class: "link auth-link" %>
    </div>

<% end %>
