
<h3 class="mb-4">Login</h3>
<%= form_with  url: sessions_path, method: :post do |form| %>
    
    <div class="field">
        <%= form.label :email ,class: "form-lable"%>
        <%= form.text_field :email , class: "form-control"%>
    </div>

    <div class="field">
        <%= form.label :password ,class: "form-lable"%>
        <%= form.text_field :password , class: "form-control" %>
    </div>

    <div class="actions">
        <%= form.submit "login", class: "btn" %>
    </div>

    <div class="row" >
         <%= link_to "create account", signup_path, class: "link" %>
    </div>

<% end %>
