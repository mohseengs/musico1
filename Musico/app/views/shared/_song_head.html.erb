<div class="row song-head p-3">
    <div class="col-12 p-0">
        <%= image_tag song.thumbnail , class: "thumbnail" %>
        <a href="<%= play_song_path(song)%>" target="_top" data-turbo-history="replace">
            <%= image_tag "icons/play.svg" , class: "play" %>
        </a>    
    </div>
     <div class="col-12 pl-1">
        <h5 class="song-name mb-0 link"><%= song.name %></h5>
    </div>
    <div class='col-2 p-1 like_button'>
        <%= render "likes/like_button" , likeable:song %>
    </div>
    <div class='col-2 p-1 like_button'>
        <%= link_to image_tag("icons/plus.svg"), song_queue_path(song.id), method: :patch%>
    </div>
</div>