<div class="row">
  <div class="col-12">
    <div class="row mt-3">
      <%= image_tag "bg.jpg" , class: "cover" %>
      <div class="col-12">
        <%= image_tag @user.profile_picture , class: "profile_picture"%>
      </div>
      <div class="col-12 ml-3 mt-2">
        <h4><%= @user.name %></h4>
      </div>
      <% if current_user != @user %>
        <div class='col-2 ml-4 follow_button'>
          <%= render "follows/follow_button" , user: @user %>
        </div>
      <% else %>
          <%= link_to "logout" , logout_path , method: :delete , class: "btn"%>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<div class="songs m-3">
  <h5>Songs</h5>
  <div class="row">
    <% @user.songs.each do |song| %>
        <div class="col-3">
          <%= render partial: "shared/song_head" , locals: { song: song } %>
        </div>
    <% end %>
  </div>
</div>

<div class="songs m-3">
<h5>Playlists</h5>
  <div class="row">
  <% @user.playlists.each do |playlist| %>
      <div class="col-3">
        <%= render partial: "shared/playlist_head" , locals: { playlist: playlist } %>
      </div>
  <% end %>
  </div>
</div>