<p id="notice"><%= notice %></p>

<h1>Playlists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created by</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.description %></td>
        <td><%= playlist.user.name %></td>
        <td><%= link_to 'Show', playlist_playlist_songs_path(playlist) %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <td class='like_button'><%= render "likes/like_button" , likeable:playlist %><td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path %>
