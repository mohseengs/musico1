<div class="row notification-head p-3">
    <div class="col-1 p-0 ml-3">
            <a href="<%= user_path(notification.sender)%>">
                <%= image_tag notification.sender.profile_picture , class: "dp"%>
            </a>
    </div>
    <div class="col-8 p-1">
        <h6><%= notification.sender.name %></h6>
        <p>liked your song</p>
        
    </div> 
    <div class="col-2">
        <div class='row p-1'>
            <a href="<%= song_path(song)%>">
                <%= image_tag song.thumbnail , class: "thumbnail"%>
            </a>
        </div>  
    </div>
</div>