<h3 class="mb-4">Signup</h3>
<%= form_with url: signup_path , model: user do |form| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this playlist from being saved:</h2>

        <ul>
            <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
    <div>
        <%= form.label :name ,class: "form-lable"%>
        <%= form.text_field :name , class: "form-control"%>
    </div>
    
    <div>
        <%= form.label :email ,class: "form-lable"%>
        <%= form.text_field :email , class: "form-control"%>
    </div>
    
    <div>
        <%= form.label :dob ,class: "form-lable"%>
        <%= form.date_field :dob , class: "form-control" %>
    </div>

    <div>
        <%= form.label :profile_picture ,class: "form-lable"%>
        <%= form.file_field :profile_picture , class: "form-control-file" %>
    </div>

    <div>
        <%= form.label :password ,class: "form-lable"%>
        <%= form.password_field :password , class: "form-control" %>
    </div>

    <div>
        <%= form.label :password_confirmation ,class: "form-lable"%>
        <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="actions">
        <%= form.submit "signup", class: "btn auth-btn" %>
    </div>

     <div class="row justify-content-center mt-2" >
         <%= link_to "login", login_path, class: "link auth-link" %>
    </div>

<% end %>
